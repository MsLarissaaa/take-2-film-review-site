
<div class="container-fluid text-center">
  <h1>Sign Up to make Reviews on Take-2</h1>

  <%= form_for :user, html: { class: "form-horiozontal" } do |f| %>
    <div class="form-group error-messages">
      <% if @user.errors.any? %>
        <div>
          <h3>
            <%= pluralize(@user.errors.count, "error") %> stopped the user from being saved:
          </h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><h5><%= message %></h5></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="form-group text-right">
      <%= f.label :username, "Username", class: "col-md-4 control-label" %>
      <div class="col-md-5">
        <%= f.text_field :username, class: "form-control new-user-field" %>
      </div>
      <div class="col-md-3"></div>
    </div>

    <div class="form_group text-right">
      <%= f.label :email, "Email", class: "col-md-4 control-label" %>
      <div class="col-md-5">
        <%= f.text_field :email, class: "form-control new-user-field" %>
      </div>
      <div class="col-md-3"></div>
    </div>

    <div class="form_group text-right">
      <%= f.label :password, "Password", class: "col-md-4 control-label" %>
      <div class="col-md-5">
        <%= f.password_field :password, class: "form-control new-user-field" %>
      </div>
      <div class="col-md-3"></div>
    </div>



    <div class="form_group text_right">
      <div class="col-md-4"></div>
      <div class= "col-md-4"><%= f.submit %></div>
      <div class="col-md-4 "></div>
    </div >
  <% end %>
  </div>
</div>