<h1>this is the new users page (sign up for a user)</h1>

<div class="container-fluid">
  <%= form_for :user, html: { class: "form-horiozontal" } do |f| %>
    <div class="form-group">
      <% if @user.errors.any? %>
        <div>
          <h3>
            <%= pluralize(@user.errors.count, "error") %> stopped the user from being saved:
          </h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><h5><%= message %></h5></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :username, "Username", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :username, class: "form-control" %>
      </div>
    </div>

    <div class="form_group">
      <%= f.label :email, "Email", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form_group">
      <%= f.label :password, "Password", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>



    <p>
      <%= f.submit %>
    </p>
  <% end %>
  </div>
</div>